{%  extends "LokiCharacterBundle::front.html.twig" %}
{% block content %}
    <div>
        Skill {% if charSkill.skill is not null %}
            von {{ character.name }} bearbeiten.
        {% else %}
            zu  {{ character.name }} hinzuf√ºgen.
        {% endif %}
    </div>
    {% block attributeForm %}
        <div class="form-horizontal">
            {{ form_start(form) }}
            {% for flashMessage in app.session.getFlashBag.get('form-error') %}
                <div class="alert alert-error">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% if charSkill.skill is not null %}
                {{ charSkill.skill.name }}
            {% endif %}
            {{ form_errors(form.level) }}
            {{ form_widget(form.level) }}
            {{ form_row (form.skill) }}
            {{ form_row(form.submit) }}

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

    {% endblock %}
{% endblock %}
