{%  extends "LokiCharacterBundle::front.html.twig" %}
{% block content %}
    <div>
        Connection {% if connection.name  is not null %} {{ connection.name }}{% endif %} von {{ character.name }} bearbeiten.
    </div>
    {% block form %}
        <div class="form-horizontal">
            {{ form_start(form) }}
            {% for flashMessage in app.session.getFlashBag.get('form-error') %}
                <div class="alert alert-error">
                    {{ flashMessage }}
                </div>
            {% endfor %}


            {{ form_row (form.name) }}
            {{ form_row (form.level) }}
            {{ form_row(form.submit) }}

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

    {% endblock %}
{% endblock %}
