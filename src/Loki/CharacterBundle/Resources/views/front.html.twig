<html>
<head>
    {% block head %}
        <title>Lokis Character Datenbank</title>
    {% endblock %}
    {% block headIncludes %}
        <link rel="stylesheet" type="text/css" href="{{ asset('style/css/bootstrap.css') }}">
        {#<link rel="stylesheet" type="text/css" href="{{ asset('style/css/bootstrap.min.css') }}">#}
        {#<link rel="stylesheet" type="text/css" href="{{ asset('style/css/bootstrap.css.map') }}">#}
        <link rel="stylesheet" type="text/css" href="{{ asset('style/css/bootstrap-theme.css') }}">
        {#<link rel="stylesheet" type="text/css" href="{{ asset('style/css/bootstrap-theme.css.map') }}">#}
        {#<link rel="stylesheet" type="text/css" href="{{ asset('style/css/bootstrap-theme.min.css') }}">#}
        <link rel="stylesheet" type="text/css" href="{{ asset('style/css/style.css') }}">
        <script src="https://code.jquery.com/jquery.js"></script>
        <script src="{{ asset('style/js/bootstrap.min.js') }}"></script>
    {% endblock %}
    {% block custom_javascripts %}
    {% endblock %}
</head>
<body>
{% block navbar%}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path("loki_character_index") }}">Shadowrun Character Datenbank</a>
            </div>
            <div class="navbar-collapse collapse">
                {% block loginForm %}
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <form class="navbar-form navbar-right" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token"
                                   value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}"/>
                            <div class="form-group">
                                <input type="text" title="Benutzername" name="_username" class="form-control"
                                       placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}">
                            </div>
                            <div class="form-group">
                                <input type="password" title="Kennwort" name="_password" class="form-control" placeholder="Kennwort">
                            </div>
                            <button type="submit" class="btn btn-success">Einloggen</button>

                            {#<div id="login_help">#}
                                <a href="{{ path('fos_user_resetting_request')}}" rel="nofollow">Kennwort vergessen?</a>
                                <a rel="nofollow" href="{{ path('fos_user_registration_register')}}">Jetzt kostenlos anmelden!</a>
                            {#</div>#}
                        </form>
                    {% else %}
                        <div id="login2">
                        <span class="navbar-brand navbar-right">
                        Hallo {{ app.user.username}},


                            <a href="{{ path('fos_user_profile_show') }}">Dein Profil</a>


                                <a href="{{ path('fos_user_security_logout') }}">
                                    <i class="glyphicon glyphicon-remove-circle"></i>
                                </a>
                        </span>
                        </div>
                    {% endif %}
                {% endblock %}
            </div><!--/.navbar-collapse -->
        </div>
    </div>
{% endblock %}

<div class="jumbotron">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% block sideBar %}
                {#<div class="span3">#}
                    <div >
                        <ul class="nav nav-sidebar"{#class="nav nav-list"#}>
                            <li class="nav-header">
                                Verwaltung:
                            </li>
                            <li>
                                <a href="{{ path("loki_character_show_character_for_user", {'userId' :  app.user.id}) }}">Meine Character</br/></a>
                            </li>
                            <li class="active">
                                <a href="{{ path("loki_character_add_character")  }}">Neuer Character</a>
                            </li>
                            <li><a href="">Attribute (TODO)</a></li>
                            <li><a href="{{ path("loki_character_add_skill") }}">Skills hinzuf√ºgen</a></li>
                        </ul>
                    </div>
                {#</div>#}
            {% endblock %}
                {%  endif %}
            </div>
            <div class="span9">
        {% block banner %}

            <img align="center" src="{{ asset('images/sr2logo.png') }}"><br/>
        {% endblock %}
            </div>
    </div>{#Row (fluid)#}
        <div class="container">
            {% block flashMessage %}
                {% for flashMessage in app.session.getFlashBag.get('error') %}
                    <div class="alert alert-error">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.getFlashBag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                {% for flashMessage in app.session.getFlashBag.get('info') %}
                    <div class="alert alert-info">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endblock %}
            {% block content %}

            {% endblock %}
        </div>
</div> {#container Fluid#}

    {% block footer %}
</div>{#jumbotron#}
    <footer>
        <h4>by Loki</h4>
    </footer>
{% endblock %}
</body>
</html>